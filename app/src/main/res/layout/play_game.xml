<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0D7FF"
    android:clickable="true">

    <GridLayout
        android:id="@+id/sudokuHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3">
        <TextView
            android:id="@+id/holder0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:minWidth="50dp"
            android:gravity="center"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="0"
            android:layout_row="0"
            android:text="1"/>
        <TextView
            android:id="@+id/holder1"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="1"
            android:layout_row="0"
            android:text="2"/>
        <TextView
            android:id="@+id/holder2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="2"
            android:layout_row="0"
            android:text="3"/>
        <TextView
            android:id="@+id/holder3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4"/>
        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/holder4"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="1"
            android:layout_row="1"
            android:text="5"/>
        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
        android:id="@+id/holder5"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
        android:layout_column="2"
        android:layout_row="1"
        android:text="6"/>
        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/holder6"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="0"
            android:layout_row="2"
            android:text="7"/>
        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/holder7"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="1"
            android:layout_row="2"
            android:text="8"/>
        <TextView
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/holder8"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:scaleType="fitCenter"
            android:layout_column="2"
            android:layout_row="2"
            android:text="9"/>
    </GridLayout>
</LinearLayout>